<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_imageView_song"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/id_imageView_song"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/default_music_playing"
        tools:srcCompat="@drawable/default_music_playing" />

    <Space
        android:layout_width="6dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_weight="1"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_textView_songTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/blank"
            android:textColor="#F5090909"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_textView_singer"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/blank"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_textView_album"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxWidth="180dp"
                android:maxLines="1"
                android:text="@string/blank"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/id_imageView_playing"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/blank"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_audiotrack_black_24dp"
        tools:srcCompat="@drawable/ic_audiotrack_black_24dp" />

</LinearLayout>
